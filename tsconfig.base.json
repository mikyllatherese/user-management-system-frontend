{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./", // Change this to "src"
    "paths": {
      "@app/*": [
        "src/app/*"
      ]
    },
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "module": "es2020",
    "lib": [
      "es2018",
      "dom"
    ]
  }
}